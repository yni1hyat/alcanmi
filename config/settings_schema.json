  {
    "name": "Ürün Ayarları",
    "settings": [
      {
        "type": "header",
        "content": "Ürün Kartları"
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Marka Adını Göster",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_rating",
        "label": "Ürün Puanını Göster",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_quick_view",
        "label": "Hızlı Görüntüleme Butonunu Göster",
