    background: rgba(var(--color-primary), 0.1);
    color: rgb(var(--color-primary));
  }

  .filters__price-range {
    display: flex;
    gap: 0.5rem;
  }

  .filters__price-input {
    flex: 1;
    padding: 0.75rem;
    border: 1px solid rgba(var(--color-base-text), 0.2);
    border-radius: 0.5rem;
    font-size: 0.875rem;
    outline: none;
  }

  .filters__price-input:focus {
    border-color: rgb(var(--color-primary));
    box-shadow: 0 0 0 2px rgba(var(--color-primary), 0.2);
  }

  .filters__rating-option {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    width: 100%;
    padding: 0.75rem;
    background: none;
    border: none;
    border-radius: 0.5rem;
    color: rgba(var(--color-base-text), 0.7);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .filters__rating-option:hover {
    background: rgba(var(--color-primary), 0.1);
    color: rgb(var(--color-primary));
  }

  .filters__rating-stars {
    display: flex;
    gap: 0.125rem;
  }

  .filters__rating-stars svg {
    width: 0.875rem;
    height: 0.875rem;
  }

  .filters__checkbox {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    cursor: pointer;
  }

  .filters__checkbox-input {
    width: 1rem;
    height: 1rem;
    accent-color: rgb(var(--color-primary));
  }

  .product-grid-section__products {
    flex: 1;
  }

  .product-grid-section__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1.5rem;
  }

  .product-grid-section__title {
    font-size: 1.5rem;
    font-weight: bold;
    color: rgb(var(--color-base-text));
    margin: 0;
  }

  .product-grid-section__count {
    color: rgba(var(--color-base-text), 0.6);
    font-size: 0.875rem;
  }

  .product-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 1rem;
  }

  .empty-state__icon {
    font-size: 3.75rem;
    margin-bottom: 1rem;
  }

  .empty-state__title {
    font-size: 1.25rem;
    font-weight: 600;
    color: rgb(var(--color-base-text));
    margin: 0 0 0.5rem 0;
  }

  .empty-state__description {
    color: rgba(var(--color-base-text), 0.6);
    margin: 0 0 1rem 0;
  }

  .empty-state__button {
    display: inline-block;
    background: rgb(var(--color-primary));
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: background-color 0.2s ease;
  }

  .empty-state__button:hover {
    background: rgb(var(--color-primary-light));
  }

  @media (min-width: 768px) {
    .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .search-form__filter-text {
      display: inline;
    }
  }

  @media (min-width: 1024px) {
    .product-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .product-grid-section__filters {
      display: block;
      position: static;
      height: auto;
      background: rgb(var(--color-base-background-1));
      border-radius: 0.75rem;
      box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
      border: 1px solid rgba(var(--color-base-text), 0.1);
    }

    .filters__close {
      display: none;
    }
  }

  @media (min-width: 1280px) {
    .product-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const filterToggle = document.getElementById('filter-toggle');
    const filterSidebar = document.getElementById('filter-sidebar');
    const filterClose = document.getElementById('filter-close');

    if (filterToggle && filterSidebar) {
      filterToggle.addEventListener('click', function() {
        filterSidebar.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    }

    if (filterClose && filterSidebar) {
      filterClose.addEventListener('click', function() {
        filterSidebar.classList.remove('active');
        document.body.style.overflow = '';
      });
    }

    // Close filter on backdrop click
    if (filterSidebar) {
      filterSidebar.addEventListener('click', function(e) {
        if (e.target === filterSidebar) {
          filterSidebar.classList.remove('active');
          document.body.style.overflow = '';
        }
      });
    }
  });
</script>

