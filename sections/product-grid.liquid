{% comment %}
  Product grid section for displaying products
{% endcomment %}

<section class="product-grid-section">
  <div class="product-grid-section__wrapper">
    <!-- Search and Filter Bar -->
    <div class="product-grid-section__search">
      <form action="{{ routes.search_url }}" method="get" class="search-form">
        <div class="search-form__input-wrapper">
          {% render 'icon-search' %}
          <input type="search" 
                 name="q" 
                 value="{{ search.terms | escape }}"
                 placeholder="√úr√ºn ara... (√∂rn: akƒ±llƒ±, su ≈üi≈üesi, kablosuz)"
                 class="search-form__input"
                 autocomplete="off">
        </div>
        <button type="button" class="search-form__filter-toggle" id="filter-toggle">
          {% render 'icon-filter' %}
          <span class="search-form__filter-text">Filtreler</span>
        </button>
      </form>
    </div>

    <div class="product-grid-section__content">
      <!-- Filter Sidebar -->
      <div class="product-grid-section__filters" id="filter-sidebar">
        <div class="filters">
          <div class="filters__header">
            <h3 class="filters__title">Filtreler</h3>
            <button class="filters__close" id="filter-close">
              {% render 'icon-close' %}
            </button>
          </div>

          <!-- Categories -->
          <div class="filters__group">
            <h4 class="filters__group-title">Kategori</h4>
            <div class="filters__options">
              <a href="{{ routes.all_products_collection_url }}" 
                 class="filters__option {% unless collection %}filters__option--active{% endunless %}">
                T√ºm Kategoriler
              </a>
              {% for collection in collections %}
                {% unless collection.handle == 'frontpage' %}
                  <a href="{{ collection.url }}" 
                     class="filters__option {% if collection.handle == collection.handle %}filters__option--active{% endif %}">
                    {{ collection.title }}
                  </a>
                {% endunless %}
              {% endfor %}
            </div>
          </div>

          <!-- Price Range -->
          <div class="filters__group">
            <h4 class="filters__group-title">Fiyat Aralƒ±ƒüƒ±</h4>
            <div class="filters__price-range">
              <input type="number" placeholder="Min" class="filters__price-input" id="price-min">
              <input type="number" placeholder="Max" class="filters__price-input" id="price-max">
            </div>
          </div>

          <!-- Rating Filter -->
          <div class="filters__group">
            <h4 class="filters__group-title">Minimum Puan</h4>
            <div class="filters__options">
              {% for i in (1..5) %}
                <button class="filters__rating-option" data-rating="{{ i }}">
                  <div class="filters__rating-stars">
                    {% for j in (1..5) %}
                      {% if j <= i %}
                        {% render 'icon-star-filled' %}
                      {% else %}
                        {% render 'icon-star' %}
                      {% endif %}
                    {% endfor %}
                  </div>
                  <span>{{ i }}+ yƒ±ldƒ±z</span>
                </button>
              {% endfor %}
            </div>
          </div>

          <!-- Free Shipping -->
          <div class="filters__group">
            <label class="filters__checkbox">
              <input type="checkbox" class="filters__checkbox-input">
              <span class="filters__checkbox-label">Sadece √úcretsiz Kargo</span>
            </label>
          </div>
        </div>
      </div>

      <!-- Products Grid -->
      <div class="product-grid-section__products">
        <div class="product-grid-section__header">
          <h2 class="product-grid-section__title">
            {% if search.terms %}
              "{{ search.terms }}" i√ßin sonu√ßlar
            {% elsif collection %}
              {{ collection.title }}
            {% else %}
              T√ºm √úr√ºnler
            {% endif %}
          </h2>
          <div class="product-grid-section__count">
            {% if search.results %}
              {{ search.results.size }} √ºr√ºn bulundu
            {% elsif collection %}
              {{ collection.products.size }} √ºr√ºn bulundu
            {% else %}
              {{ collections.all.products.size }} √ºr√ºn bulundu
            {% endif %}
          </div>
        </div>

        <div class="product-grid" id="product-grid">
          {% if search.results.size > 0 %}
            {% for product in search.results %}
              {% render 'product-card', product: product %}
            {% endfor %}
          {% elsif collection %}
            {% for product in collection.products %}
              {% render 'product-card', product: product %}
            {% endfor %}
          {% else %}
            {% for product in collections.all.products limit: 12 %}
              {% render 'product-card', product: product %}
            {% endfor %}
          {% endif %}
        </div>

        {% if search.results.size == 0 and search.terms %}
          <div class="product-grid-section__empty">
            <div class="empty-state">
              <div class="empty-state__icon">üîç</div>
              <h3 class="empty-state__title">Aradƒ±ƒüƒ±nƒ±z kriterlere uygun √ºr√ºn bulunamadƒ±</h3>
              <p class="empty-state__description">Farklƒ± arama terimleri veya filtreler deneyebilirsiniz</p>
              <a href="{{ routes.all_products_collection_url }}" class="empty-state__button">
                T√ºm √úr√ºnleri G√∂r√ºnt√ºle
              </a>
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .product-grid-section {
    background: rgb(var(--color-base-background-2));
    padding: 2rem 0;
  }

  .product-grid-section__wrapper {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .product-grid-section__search {
    background: rgb(var(--color-base-background-1));
    border-radius: 0.75rem;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(var(--color-base-text), 0.1);
    padding: 1rem;
    margin-bottom: 1.5rem;
  }

  .search-form {
    display: flex;
    gap: 0.75rem;
  }

  .search-form__input-wrapper {
    flex: 1;
    position: relative;
  }

  .search-form__input-wrapper svg {
