{% comment %}
  Footer section
{% endcomment %}

<footer class="footer">
  <div class="footer__wrapper">
    <div class="footer__content">
      <!-- Company Info -->
      <div class="footer__section">
        <div class="footer__logo">
          {% if settings.logo != blank %}
            <img src="{{ settings.logo | image_url: width: 150 }}" 
                 alt="{{ shop.name }}" 
                 class="footer__logo-image">
          {% else %}
            <span class="footer__logo-text">{{ shop.name }}</span>
          {% endif %}
        </div>
        <p class="footer__description">
          Hayatı kolaylaştıran akıllı çözümler ve yenilikçi ürünlerle 
          günlük yaşamınızı daha verimli hale getirin.
        </p>
        <div class="footer__social">
          {% if settings.social_facebook_link != blank %}
            <a href="{{ settings.social_facebook_link }}" class="footer__social-link" target="_blank" rel="noopener">
              {% render 'icon-facebook' %}
            </a>
          {% endif %}
          {% if settings.social_instagram_link != blank %}
            <a href="{{ settings.social_instagram_link }}" class="footer__social-link" target="_blank" rel="noopener">
              {% render 'icon-instagram' %}
            </a>
          {% endif %}
          {% if settings.social_twitter_link != blank %}
            <a href="{{ settings.social_twitter_link }}" class="footer__social-link" target="_blank" rel="noopener">
              {% render 'icon-twitter' %}
            </a>
          {% endif %}
          {% if settings.social_youtube_link != blank %}
            <a href="{{ settings.social_youtube_link }}" class="footer__social-link" target="_blank" rel="noopener">
              {% render 'icon-youtube' %}
            </a>
          {% endif %}
        </div>
      </div>

      <!-- Quick Links -->
      <div class="footer__section">
        <h4 class="footer__title">Hızlı Linkler</h4>
        <ul class="footer__links">
          <li><a href="{{ routes.root_url }}" class="footer__link">Ana Sayfa</a></li>
          <li><a href="{{ routes.all_products_collection_url }}" class="footer__link">Tüm Ürünler</a></li>
          <li><a href="{{ routes.search_url }}" class="footer__link">Arama</a></li>
          <li><a href="/pages/about" class="footer__link">Hakkımızda</a></li>
          <li><a href="/pages/contact" class="footer__link">İletişim</a></li>
        </ul>
      </div>

      <!-- Categories -->
      <div class="footer__section">
        <h4 class="footer__title">Kategoriler</h4>
        <ul class="footer__links">
          {% for collection in collections limit: 6 %}
            {% unless collection.handle == 'frontpage' %}
              <li><a href="{{ collection.url }}" class="footer__link">{{ collection.title }}</a></li>
            {% endunless %}
          {% endfor %}
        </ul>
      </div>

      <!-- Customer Service -->
      <div class="footer__section">
        <h4 class="footer__title">Müşteri Hizmetleri</h4>
        <ul class="footer__links">
          <li><a href="/pages/shipping" class="footer__link">Kargo Bilgileri</a></li>
          <li><a href="/pages/returns" class="footer__link">İade & Değişim</a></li>
          <li><a href="/pages/size-guide" class="footer__link">Boyut Rehberi</a></li>
          <li><a href="/pages/faq" class="footer__link">Sık Sorulan Sorular</a></li>
          <li><a href="/pages/support" class="footer__link">Destek</a></li>
        </ul>
      </div>

      <!-- Newsletter -->
      <div class="footer__section">
        <h4 class="footer__title">Bülten</h4>
        <p class="footer__newsletter-text">
          Yeni ürünler ve özel indirimlerden haberdar olun.
        </p>
        <form class="footer__newsletter-form" action="/contact#newsletter" method="post" accept-charset="UTF-8">
          <input type="hidden" name="form_type" value="customer">
          <input type="hidden" name="utf8" value="✓">
          <div class="footer__newsletter-input-wrapper">
            <input type="email" 
                   name="contact[email]" 
                   placeholder="E-posta adresiniz"
                   class="footer__newsletter-input"
                   required>
            <button type="submit" class="footer__newsletter-button">
              {% render 'icon-arrow-right' %}
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="footer__bottom">
      <div class="footer__bottom-content">
        <div class="footer__copyright">
          <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. Tüm hakları saklıdır.</p>
        </div>
        <div class="footer__legal">
          <a href="/pages/privacy-policy" class="footer__legal-link">Gizlilik Politikası</a>
          <a href="/pages/terms-of-service" class="footer__legal-link">Kullanım Şartları</a>
          <a href="/pages/cookies" class="footer__legal-link">Çerez Politikası</a>
        </div>
        <div class="footer__payment">
          <span class="footer__payment-text">Güvenli Ödeme:</span>
          <div class="footer__payment-icons">
            {% render 'icon-visa' %}
            {% render 'icon-mastercard' %}
            {% render 'icon-paypal' %}
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: rgb(var(--color-base-text));
    color: white;
    margin-top: 4rem;
  }

  .footer__wrapper {
    max-width: 1280px;
    margin: 0 auto;
    padding: 3rem 1rem 0;
  }

  .footer__content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer__section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer__logo-text {
    font-size: 1.5rem;
    font-weight: bold;
    color: white;
  }

  .footer__logo-image {
    max-width: 150px;
    height: auto;
  }

  .footer__description {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
    margin: 0;
  }

  .footer__social {
    display: flex;
    gap: 1rem;
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .footer__social-link:hover {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    transform: translateY(-2px);
  }

  .footer__social-link svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  .footer__title {
    font-size: 1.125rem;
    font-weight: 600;
    color: white;
    margin: 0;
  }

  .footer__links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer__link {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.2s ease;
    font-size: 0.875rem;
  }

  .footer__link:hover {
    color: white;
  }

  .footer__newsletter-text {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.875rem;
    margin: 0;
  }

  .footer__newsletter-form {
    margin-top: 0.5rem;
  }

  .footer__newsletter-input-wrapper {
    display: flex;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .footer__newsletter-input {
    flex: 1;
    padding: 0.75rem 1rem;
    background: transparent;
    border: none;
    color: white;
    font-size: 0.875rem;
    outline: none;
  }

  .footer__newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }

  .footer__newsletter-button {
    padding: 0.75rem 1rem;
    background: rgb(var(--color-primary));
    border: none;
    color: white;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .footer__newsletter-button:hover {
    background: rgb(var(--color-primary-light));
  }

  .footer__newsletter-button svg {
    width: 1rem;
    height: 1rem;
  }

  .footer__bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 1.5rem 0;
  }

  .footer__bottom-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    text-align: center;
  }

  .footer__copyright {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.875rem;
  }

  .footer__copyright p {
    margin: 0;
  }

  .footer__legal {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .footer__legal-link {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .footer__legal-link:hover {
    color: white;
  }

  .footer__payment {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .footer__payment-text {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.875rem;
  }

  .footer__payment-icons {
    display: flex;
    gap: 0.5rem;
  }

  .footer__payment-icons svg {
    width: 2rem;
    height: 1.25rem;
    color: rgba(255, 255, 255, 0.8);
  }

  @media (min-width: 768px) {
    .footer__content {
      grid-template-columns: repeat(2, 1fr);
    }

    .footer__bottom-content {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  @media (min-width: 1024px) {
    .footer__content {
      grid-template-columns: 2fr repeat(4, 1fr);
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Bülten Başlığı",
      "default": "Bülten"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Bülten Açıklaması",
      "default": "Yeni ürünler ve özel indirimlerden haberdar olun."
    },
    {
      "type": "checkbox",
      "id": "show_social_icons",
      "label": "Sosyal Medya İkonlarını Göster",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Ödeme İkonlarını Göster",
      "default": true
    }
  ]
}
{% endschema %}