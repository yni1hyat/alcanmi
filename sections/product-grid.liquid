    left: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    width: 1.25rem;
    height: 1.25rem;
    color: rgba(var(--color-base-text), 0.4);
  }

  .search-form__input {
    width: 100%;
    padding: 0.75rem 0.75rem 0.75rem 2.5rem;
    border: 1px solid rgba(var(--color-base-text), 0.2);
    border-radius: 0.5rem;
    font-size: 1rem;
    outline: none;
    transition: all 0.2s ease;
  }

  .search-form__input:focus {
    border-color: rgb(var(--color-primary));
    box-shadow: 0 0 0 2px rgba(var(--color-primary), 0.2);
  }

  .search-form__filter-toggle {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: rgba(var(--color-base-text), 0.05);
    color: rgba(var(--color-base-text), 0.7);
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .search-form__filter-toggle:hover {
    background: rgba(var(--color-base-text), 0.1);
  }

  .search-form__filter-text {
    display: none;
  }

  .product-grid-section__content {
    display: flex;
    gap: 2rem;
  }

  .product-grid-section__filters {
    display: none;
    width: 20rem;
    flex-shrink: 0;
  }

  .product-grid-section__filters.active {
    display: block;
    position: fixed;
    top: 0;
    right: 0;
    height: 100vh;
    background: rgb(var(--color-base-background-1));
    box-shadow: -4px 0 6px -1px rgba(0, 0, 0, 0.1);
    z-index: 50;
    overflow-y: auto;
  }

  .filters {
    padding: 1.5rem;
    height: 100%;
  }

  .filters__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1.5rem;
  }

  .filters__title {
    font-size: 1.125rem;
    font-weight: 600;
    color: rgb(var(--color-base-text));
    margin: 0;
  }

  .filters__close {
    display: block;
    padding: 0.5rem;
    background: none;
    border: none;
    color: rgba(var(--color-base-text), 0.4);
    cursor: pointer;
  }

  .filters__group {
    margin-bottom: 1.5rem;
  }

  .filters__group-title {
    font-weight: 500;
    color: rgb(var(--color-base-text));
    margin: 0 0 0.75rem 0;
    font-size: 1rem;
  }

  .filters__options {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .filters__option {
    display: block;
    width: 100%;
    text-align: left;
    padding: 0.75rem;
    background: none;
    border: none;
    border-radius: 0.5rem;
    color: rgba(var(--color-base-text), 0.7);
    text-decoration: none;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .filters__option:hover,
