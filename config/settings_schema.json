      {
        "type": "checkbox",
        "id": "show_share_buttons",
        "label": "Paylaşım Butonlarını Göster",
        "default": true
      },
      {
        "type": "select",
        "id": "product_image_size",
        "label": "Ürün Görsel Boyutu",
        "options": [
          {
            "value": "small",
            "label": "Küçük"
          },
          {
            "value": "medium",
            "label": "Orta"
          },
          {
            "value": "large",
            "label": "Büyük"
          }
        ],
        "default": "medium"
      }
    ]
  },
  {
    "name": "Kargo Ayarları",
    "settings": [
      {
        "type": "header",
        "content": "Ücretsiz Kargo"
      },
      {
        "type": "checkbox",
        "id": "free_shipping_enabled",
        "label": "Ücretsiz Kargo Etkinleştir",
        "default": true
      },
      {
        "type": "number",
        "id": "free_shipping_threshold",
        "label": "Ücretsiz Kargo Minimum Tutarı",
        "default": 150
      },
      {
        "type": "text",
        "id": "free_shipping_message",
        "label": "Ücretsiz Kargo Mesajı",
        "default": "150₺ ve üzeri alışverişlerde ücretsiz kargo!"
      },
      {
        "type": "header",
        "content": "Kargo Ücretleri"
      },
      {
        "type": "number",
        "id": "standard_shipping_cost",
        "label": "Standart Kargo Ücreti",
        "default": 29
      },
      {
        "type": "number",
        "id": "express_shipping_cost",
        "label": "Hızlı Kargo Ücreti",
        "default": 49
      }
    ]
  },
  {
    "name": "Performans",
    "settings": [
      {
        "type": "header",
        "content": "Görsel Optimizasyonu"
      },
      {
        "type": "checkbox",
        "id": "enable_lazy_loading",
        "label": "Lazy Loading Etkinleştir",
        "default": true,
        "info": "Görsellerin sayfa yüklenirken gecikmeli yüklenmesini sağlar"
      },
      {
        "type": "select",
        "id": "image_quality",
        "label": "Görsel Kalitesi",
        "options": [
          {
            "value": "70",
            "label": "Düşük (Hızlı yüklenme)"
          },
          {
            "value": "85",
            "label": "Orta (Önerilen)"
          },
          {
            "value": "95",
            "label": "Yüksek (Yavaş yüklenme)"
          }
        ],
        "default": "85"
      },
      {
        "type": "header",
        "content": "Önbellekleme"
      },
      {
        "type": "checkbox",
        "id": "enable_browser_cache",
        "label": "Tarayıcı Önbelleği Etkinleştir",
        "default": true
      }
    ]
